    </head>
  <body style="background: #fafafa !important;">

    <nav class="navbar navbar-expand-lg navbar-blue fixed-top mb-3" style="background: linear-gradient(to right, #feda75, #fa7e1e, #d62976, #962fbf, #4f5bd5);">
        <div class="container">
            <a class="navbar-brand" href="#">Instagram</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    
                    <a href="" data-toggle="collapse" aria-expanded="false" class="btn btn-success" data-mdb-toggle="modal"
                data-mdb-target="#publication">Nouvelle publication</a> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                <div style="padding-left: 119px; border-left: solid 2px whitesmoke;">
                  <h4 style="color: whitesmoke;">Profil</h4>
                </div>
                        
                </ul>
            </div>
        </div>
    </nav>


    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3 style="font-weight: bold;"></h3>
            </div>

              <div class="text-center">
                <% if @user.image.blank? %>
                    <img
                    src="https://mdbootstrap.com/img/new/standard/city/047.jpg"
                    class="img-fluid rounded-circle"
                    alt=""
                    style="height: 120px; width: 120px; margin-top: 35px;"
                />
                <% else %>
                    <img
                      src="<%= @user.image %>"
                      class="img-fluid rounded-circle"
                      alt=""
                      style="height: 120px; width: 120px; margin-top: 30px;"
                    />
                <% end %>
                

                <h4 style="margin-top: 15px;"><%= @user.name %>&nbsp;&nbsp;<%= @user.surname %></h4>

                <h6><%= @user.email %></h6>

                <h5 style="margin-top: 30px;">Publications :&nbsp;<%= @user.publications.count %></h5>

              </div>

              <div class="list-unstyled text-center" style="margin-top: 20px;">
                <li >
                    <a href="" data-toggle="collapse" aria-expanded="false" class="btn btn-success" data-mdb-toggle="modal"
                data-mdb-target="#update">Update</a>
                </li>
              </div>

            
            <ul class="list-unstyled text-center" style="margin-top: 50px;">

                
                <li >
                    <%= link_to "Log Out", destroy_path, method: :delete, class: "btn btn-danger "%>
                    
                </li>
                
            </ul>

            
        </nav>

        
        
            
    </div>


    

    <p class="alert alert-danger"><%= flash[:notice] %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>

   

<div
      class="modal fade"
      id="update"
      data-mdb-backdrop="static"
      data-mdb-keyboard="false"
      tabindex="-1"
      aria-labelledby="staticBackdropLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
           <h5 class="modal-title" id="staticBackdropLabel" style="font-weight: bolder;">Nouvelle publication</h5>

            <button
              type="button"
              class="btn-close"
              data-mdb-dismiss="modal"
              aria-label="Close"
            ></button>

          </div>

          <div class="modal-body">

            
            <%= form_with(model: @user,url: modifier_path(@user), method: "post") do |form| %>
                
                
                <div class="form-outline mb-4">
                  <%= form.label :name, "First Name", class: "form-label"%> <br>
                  <%= form.text_field :name, class: "form-control"%>  
                </div>
                <div class="form-outline mb-4">
                  <%= form.label :surname, "Last Name", class: "form-label" %> <br>
                  <%= form.text_field :surname, class: "form-control" %>  
                </div>
                <div class="form-outline mb-4">
                  <%= form.label :email, "Email", class: "form-label" %> <br>
                  <%= form.email_field :email, class: "form-control" %>  
                </div>
                <div class="form-outline mb-4">
                  <%= image_tag(@user.image.url) if @user.image && @user.image.url %>
                  <%= form.file_field :image, class: "form-control" %>
                </div>
                
                
                <div class="text-center">
                <%= form.submit "Valider", class: "btn btn-success  mb-4", style: "padding-right: 50px; padding-left: 50px; font-size: 17px;" %>
              
                </div>
            <% end %>
        </div>
              

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-mdb-dismiss="modal">
              Annuler
            </button>
            
          </div>
        </div>
      </div>
    <footer class="bg-light text-center text-lg-start ">
      <!-- Copyright -->
      <div class="text-center p-3" style="background: linear-gradient(to right, #feda75, #fa7e1e, #d62976, #962fbf, #4f5bd5);">
        Â© 2020 Copyright:
        <a class="text-dark" href="/">Instagram</a>
      </div>
      <!-- Copyright -->
    </footer>

